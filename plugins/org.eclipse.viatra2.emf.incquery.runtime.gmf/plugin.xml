<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.viatra2.emf.incquery.queryexplorer.handlers.LoadModelHandler"
            commandId="org.eclipse.viatra2.emf.incquery.tooling.gui.loadmodel">
         <activeWhen>
            <reference
                  definitionId="org.eclipse.viatra2.emf.incquery.runtime.gmf.editorDefinition">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.viatra2.emf.incquery.runtime.ui.gmf.handlers.InitValidatorsHandler"
            commandId="org.eclipse.viatra2.emf.incquery.validation.runtime.ui.initValidatorsOnEditor">
         <activeWhen>
            <reference
                  definitionId="org.eclipse.viatra2.emf.incquery.runtime.gmf.editorDefinition">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipse.viatra2.emf.incquery.runtime.gmf.editorDefinition">
         <with variable="activeEditor">
            <or>
            <instanceof
                   value="org.eclipse.gmf.runtime.diagram.ui.resources.editor.parts.DiagramDocumentEditor">
            </instanceof>
            <instanceof
                  value="org.eclipse.gmf.runtime.diagram.ui.parts.IDiagramWorkbenchPart">
            </instanceof>
            </or>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.gmf.runtime.diagram.ui.resources.editor.parts.DiagramDocumentEditor"
            class="org.eclipse.viatra2.emf.incquery.runtime.ui.gmf.adapters.AdapterFactoryForGMFEditors">
         <adapter
               type="org.eclipse.emf.ecore.resource.ResourceSet">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.gmf.runtime.diagram.ui.parts.IDiagramWorkbenchPart"
            class="org.eclipse.viatra2.emf.incquery.runtime.ui.gmf.adapters.AdapterFactoryForGMFEditors">
         <adapter
               type="org.eclipse.emf.ecore.resource.ResourceSet">
         </adapter>
      </factory>
   </extension>
</plugin>
